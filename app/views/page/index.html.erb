<div class="page index">
  <h2>Page Index</h2>
  <%= link_to("Add New Page", {:action => 'new' }, :class=> 'action new')%>
  <table>
    <tr class ="header">
      <th>&nbsp;</th>
      <th>Subject</th>
      <th>Visible</th>
      <th>Permalink</th>
      <th>Subject ID(s)</th>
      <th>Actions</th>
    </tr>
    <% @pages.each do |page|%>
        <tr>
          <td><%= page.position %></td>
          <td><%= page.name %></td>
          <td class="center"><%= page.visible ? 'Yes': 'No' %></td>
          <td><%= page.permalink %></td>
          <td class="center"><%= page.subject_id %></td>
          <td class="actions">
            <%=link_to("Show", {:action=>'show', :id=> page.id}, :class=> 'action show') %>
            <%=link_to("Edit", {:action=> 'edit', :id => page.id}, :class=> 'action edit') %>
            <%=link_to("Delete",{:action=> 'delete', :id=>page.id}, :class=> 'action delete') %>
          </td>
        </tr>
    <%end%>

  </table>
</div>
