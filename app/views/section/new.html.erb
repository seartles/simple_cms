<%= link_to("<<Back to list", {:action=> 'index'}, :class=> 'back-link')%>

<div class="Section new">
  <h2>Create Section</h2>
  <%= form_for(:section, :url=> {:action=> 'create'}) do |f|%>
      <table summary="Section form fields">
       <%- #:page_id,:name, :position, :visible, :content_type, :content-%>
        <tr>
          <th>Name</th>
          <td><%= f.text_field(:name)%></td>
        </tr>
        <tr>
          <th>Associated Page</th>
          <td><%= f.text_field(:page_id)%></td>
        </tr>
        <tr>
          <th>Content Type</th>
          <td><%= f.text_field(:content_type)%></td>
        </tr>
        <tr>
          <th>Content</th>
          <td><%= f.text_field(:content)%></td>
        </tr>
        <tr>
          <th>Position</th>
          <td><%= f.text_field(:position)%></td>
        </tr>
        <tr>
          <th>Visible</th>
          <td><%= f.text_field(:visible)%></td>
        </tr>
      </table>
      <div class ="form-buttons">
        <%=submit_tag("Create Section")%>
      </div>
  <% end %>
</div>